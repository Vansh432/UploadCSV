<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">


  <title>File </title>
  <style>
    .page-link {
      cursor: pointer;
    }

    .pageNumber {
      width: fit-content;
      margin: auto;
    }

    .iconContainer {
      text-align: center;
      border: 2px solid red;
      height: 60px;

    }

    .upIcon,
    .downIcon {
      font-display: auto;
      font-size: 1.2rem;
      cursor: pointer;
      margin: 5px;

    }

    .borderAllColumn {
      border: 2px solid #959595;
      background-color: #fff;
      font-weight: 400;
    }
    header{
    
      padding: 30px;
      text-align: center;
      background: linear-gradient(120deg, rgb(255, 0, 234), rgba(7, 226, 255));
    }
    header input{
      width: 40%;
      height: 40px;
      padding-left:20px ;
      font-size: 1.2rem;
      border-radius: 10px;
      outline: none;
      border: none;
      box-shadow: 0px 0px 10px #000;
    }
  </style>
</head>

<body>
<header>
  <input type="text" id="search" placeholder="search">
</header>
  <table class="table">

    <thead class="thead-dark">
      <tr>
        <%for (let j=0;j<heading.length;j++){%>

          <th scope="col" class="iconContainer borderAllColumn">
            <ion-icon name="chevron-up-outline" class="upIcon" onclick="ascendSort(<%=j%>)" title="Ascending sort"></ion-icon>
            <br>
            <ion-icon name="chevron-down-outline" class="downIcon" onclick="descendSort(<%=j%>)" title="Descending sort"></ion-icon>
          </th>
          <%}%>
      </tr>

      <tr>
        <%for (let i of heading){%>

          <th class="borderAllColumn">
            <%=i%>
          </th>
          <%}%>
      </tr>
    </thead>



    <tbody>
      <%for(let i of detail){%>
        <tr class="detailsRow">
          <%for(let j of i){%>
            <td class="borderAllColumn">
              <%=j%>
            </td>
            <%}%>
        </tr>
        <%}%>
    </tbody>
  </table>
  <nav aria-label="..." class="pageNumber">
    <ul class="pagination pagination-sm">
      <%let i=0;%>

        <% while(i<data.length){%>
          <%let page=(100+i)/100%>

            <a class="page-link" href="/file/?filename=<%=filename%>&page=<%=page%>" tabindex="-1">
              <%=page%>
            </a>

            <%i+=100%>
              <%}%>
    </ul>
  </nav>
  <script src="/script/file.js"></script>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"
    integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"
    integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
    crossorigin="anonymous"></script>


</body>

</html>